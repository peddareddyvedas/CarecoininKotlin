<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/qrcodeimage"
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_qr_big" />

    <ImageView
        android:id="@+id/carecoinimage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/ic_logo"
        android:scaleType="center" />

    <TextView

        android:id="@+id/qrtadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcodeimage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="Your Wallet Address"
        android:textColor="@color/colorlightgreen"
        android:textSize="15dp" />

    <TextView

        android:id="@+id/qrtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcodeimage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:text="nznnnxncbxbvxbcxbv"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_generatetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrtext"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/signin"
        android:text="@string/generateanewaddress"
        android:textColor="@color/colorwhite"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#9bdcd2">

        <TextView

            android:id="@+id/avilablebalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/avilablebalance"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/avilable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="17sp" />

    </RelativeLayout>


</RelativeLayout>